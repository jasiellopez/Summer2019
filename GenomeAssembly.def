Bootstrap: library
From: centos:sha256.f90b83a0dad191a4e383e901fdd6c76db209e177c7b86ae4c6e0fb08b8b7470c

%setup
    touch /init_container
    touch ${SINGULARITY_ROOTFS}/file2

%files
    /file1
    /file1 /opt

%environment
    export LC_ALL=C

%post //where all software and libraries are installed
    apt-get update && apt-get install -y
    sudo yum makecache
    sudo yum install unzip
    sudo yum install centos-release-scl
    sudo yum install devtoolset-7
    scl enable devtoolset-7 bash
    sudo yum install graphviz
    sudo yum install java
    sudo yum install perl
    wget http://www.usadellab.org/cms/uploads/supplementary/Trimmomatic/Trimmomatic-0.39.zip
    unzip Trimmomatic-0.39.zip
    wget ftp://ftp.broadinstitute.org/pub/crd/ALLPATHS/Release-LG/latest_source_code/LATEST_VERSION.tar.gz
    tar xvzf LATEST_VERSION.tar.gz
    wget http://platanus.bio.titech.ac.jp/?ddownload=145
    wget https://github.com/josephryan/JFR-PerlModules/archive/master.zip
    unzip JFR-PerlModules-master.zip
    cd JFR-PerlModules-master
    perl Makefile.PL
    make
    make test
    make install
    cd ..
    wget https://github.com/josephryan/matemaker/archive/master.zip
    unzip matemaker-master.zip
    cd matemaker-master
    perl Makefile.PL
    make
    sudo make install
    cd ..
    wget https://github.com/nsoranzo/sspace_basic/archive/master.zip
    unzip sspace_basic-master.zip
